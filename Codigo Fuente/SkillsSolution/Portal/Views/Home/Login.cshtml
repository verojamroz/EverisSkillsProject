

@model Portal.Models.UserModel
@{
    ViewBag.Title = "Login";
}


@using (Html.BeginForm())
{
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row">
                <div class="col-md-4"></div>
                    <div class="text-center">
                        <div class="col-md-4">
                            <div class="form-group">
                                <h1><p class="text-center">Bienvenido!</p></h1>
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(u => u.User.UserName, new { @class = "form-control", placeholder = "Usuario" })
                                @Html.ValidationMessageFor(u => u.User.UserName)
                            </div>

                            <div class="form-group">
                                @Html.PasswordFor(u => u.User.Password, new { @class = "form-control", placeholder = "Password" })
                                @Html.ValidationMessageFor(u => u.User.Password)
                            </div>
                            <div>
                                <table>
                                    <tr>
                                        <td>
                                            <button type="submit" class="btn btn-primary">Login</button>
                                        </td>
                                        <td>
                                            @Html.ValidationSummary(true)
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                
            </div>
        </div>
    </div>
    
}