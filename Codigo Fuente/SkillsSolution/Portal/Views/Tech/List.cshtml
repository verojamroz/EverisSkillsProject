@model Portal.Models.TechModel
@{
    ViewBag.Title = "Index";
}


<fieldset>
    <legend>Listado de Tecnologías</legend>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Descripcion</th>

                        <th></th>

                    </tr>
                </thead>
                @foreach (var item in Model.Technologies)
                {
                    <tbody>
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Description</td>

                            <td>
                                @Html.ActionLink("Actualizar", "Update", "Tech", new { id = @item.Id }, new { @class = "btn btn-primary btn-xs" })
                                @Html.ActionLink("Eliminar", "Delete", "Tech", new { id = @item.Id }, new { @class = "btn btn-primary btn-xs", data_confirmprompt = "Esta seguro de que desea eliminar la tecnología " + @item.Name + "?" })
                            </td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
        <div class="col-md-4">
            @Html.ActionLink("Nueva Tecnología", "New", "Tech", null, new { @class = "btn btn-primary" })
            @Html.ActionLink("Volver", "Index", "Home", null, new { @class = "btn btn-default" })
        </div>

    </div>
</fieldset>